@using project_ca_nhan.Models;
@functions{
    public MyDbcontext db = new MyDbcontext();
    // lay tat ca cac nhan hieu san pham
    public List<ItemTag> GetTags()
    {
        List<ItemTag> x = db.Tags.OrderByDescending(s => s.Id).ToList();
        return x;
    }
}
