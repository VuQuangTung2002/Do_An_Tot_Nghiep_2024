<!-- lay tat ca san pahm cung loai-->
@functions{
    public MyDbcontext db = new MyDbcontext();
    // lay ten categories ma Id truyen vao
    public List<ItemTag> GetTag(int id){
        List<ItemTag> x = (from tag in db.Tags join tag_product in db.TagsProducts on tag.Id equals tag_product.TagId join product in db.Products
            on tag_product.ProductId equals product.Id where product.Id == id
                           select tag
        ).OrderByDescending(s=>s.Id).ToList();
        return x;
    }
    // lay tat ca nhan hieu Tag ma khong dua vao Id
    public List<ItemTag> GetTags()
    {
        List<ItemTag> items = db.Tags.OrderByDescending(s => s.Id).ToList();
        return items;
    }
    // lay ra danh muc san pham dau tien chua Id san pham truyen vao
    public List<ItemCategory> GetCategories(int idsanpham){
        List<ItemCategory> x = (from pro in db.Products
                                join cate_pro in db.CategoriesProducts on pro.Id equals cate_pro.ProductId

                                join cate in db.Categories on cate_pro.CategoryId equals cate.Id
                                where pro.Id == idsanpham
                                select cate
        ).ToList();
        return x;
    }
    // tim kiem so luong san pham thong qua danh muc san pham truyen vao
    public List<ItemProduct> Getsanpham(int idcategories)
    {
        List<ItemProduct> y = (from pro in db.Products
                                join cate_pro in db.CategoriesProducts on pro.Id equals cate_pro.ProductId

                                join cate in db.Categories on cate_pro.CategoryId equals cate.Id
                                where cate.Id == idcategories
                                select pro
        ).ToList();
        return y;
    }
}
